<% provide :title, t("index.forgot_password") %>
<h1><%= t "index.forgot_password" %></h1>

<div class="row">
  <div class="col-md-6 col-md-md-offset-3">
    <%= form_for :password_reset, url: password_resets_path do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form_control" %>

      <%= f.submit t("index.search"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
