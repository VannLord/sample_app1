<% provide :title, t("log_in") %>
<h1><%= t "index.log_in" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t("index.password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.submit t("index.log_in"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t "index.new_user" %><%= link_to t("index.sign_up"), new_user_path %></p>
  </div>
</div>
